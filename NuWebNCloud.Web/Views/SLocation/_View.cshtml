@using NuWebNCloud.Shared.Utilities;
@model NuWebNCloud.Shared.Models.Settings.Location.LocationModels

<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml", new Dictionary<string, string> { { "A", "Settings" }, { "B", "General Settings" }, { "C", "View Detail" } })
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                    <div class="x_content">
                        <div class="row text-right">
                            <ul class="header-buttons pull-right list-inline">
                                <li>
                                    <a href="javascript:void(0)" onclick="CloseDetail(); return false;"
                                       class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Close"))</a>
                                </li>
                            </ul>
                        </div>
                        <div class="row form-horizontal form-label-left">
                            <div class="row form-horizontal form-label-left" style="margin-bottom:15px;">

                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12">
                                        @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Store"))
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.StoreName
                                    </div>
                                </div>

                                <div class="form-group" style="margin-top:20px">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Region"))
                                                </label>
                                                <div class="col-sm-6">
                                                    @Model.RegionName
                                                </div>
                                            </div>
                                            <div class="form-group isCheckRegion">
                                                <label for="" class="col-sm-2 control-label">
                                                    @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Printing Rounding on Receipt"))
                                                </label>
                                                <div class="col-sm-1">

                                                    @string.Format("{0}", (Model.IsPrintRoundingAmount ? @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("True")).ToString() : @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("False")).ToString()))
                                                </div>
                                            </div>
                                            <div class="form-group isCheckRegion">
                                                <label for="" class="col-sm-2 control-label">
                                                    @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Printing Tax Code on Receipt"))
                                                </label>
                                                <div class="col-sm-1">

                                                    @string.Format("{0}", (Model.IsPrintTaxCode ? @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("True")).ToString() : @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("False")).ToString()))
                                                </div>
                                            </div>
                                            <div class="form-group isCheckRegion">
                                                <label class="col-sm-2 control-label">
                                                    @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Printing Summary Tax on Receipt"))
                                                </label>
                                                <div class="col-sm-6">
                                                    @string.Format("{0}", (Model.IsPrintSummaryTax ?
                                         @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("True")).ToString() : @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("False")).ToString()))
                                                </div>
                                            </div>
                                            <div class="form-group isCheckRegion">
                                                <label for="" class="col-sm-2 control-label">
                                                    @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Printing Customer Claim Tax"))
                                                </label>
                                                <div class="col-sm-1">
                                                    @string.Format("{0}", (Model.IsPrintCustomerClaimTax ? @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("True")) : @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("False"))))
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        IsShowHidden('@Model.Region');
    });

    function IsShowHidden(region) {
        if (region === 'MY') {
            $('.isCheckRegion').show();
        } else {
            $('.isCheckRegion').hide();
        }
    }
</script>
