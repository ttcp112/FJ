@model NuWebNCloud.Shared.Models.Ingredients.SupplierModels
@using NuWebNCloud.Shared.Utilities;
<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                new Dictionary<string, string> { { "A", "Inventory Management" }, { "B", "Purchasing" }, { "C", "Suppliers - View detail" } })
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                <div class="x_content">
                    <div class="row text-right">
                        <ul class="header-buttons pull-right list-inline">
                            <li><a href="javascript:void(0)" onclick="CloseDetail(); return false;" class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Close"))</a></li>
                        </ul>
                    </div>
                    <div class="row form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Name")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Name
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Company Name"))</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">

                                @Model.CompanyName
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Country")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Country
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("City")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.City
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Active")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey(Model.IsActived.ToString().ToUpper()))
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Address")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Address
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Zip Code")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.ZipCode
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Phone")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Phone1 - @Model.Phone2
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Fax")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Fax
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Email")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.Email
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Contact Info")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Model.ContactInfo
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredient(s)")): </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="table-responsive">
                                    <div class="">
                                        <div class="x_content">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-bordered dt-responsive nowrap table table-striped jambo_table bulk_action" id="datatable-responsive-ingredient" cellspacing="0" style="width:100%;">
                                                    <thead>
                                                        <tr lass="headings">
                                                            <th class="column-title text-center" style="width:30%;">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Code"))</th>
                                                            <th class="column-title text-center" style="width:70%;">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Name"))</th>
                                                        </tr>
                                                    </thead>
                                                    @if (Model.ListSupIng != null)
                                                    {
                                                        for (int i = 0; i < Model.ListSupIng.Count; i++)
                                                        {
                                                            string TypeRowItem = "row-evenItem";
                                                            if (i % 2 == 0)
                                                            {
                                                                TypeRowItem = "row-oddItem";
                                                            }
                                                            var item = Model.ListSupIng[i];
                                                            <tbody>
                                                                @if (item.IsActived)
                                                                {
                                                                    <tr class=@TypeRowItem>
                                                                        <td>@item.IngredientCode</td>
                                                                        <td>@item.IngredientName</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        }
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>