@using NuWebNCloud.Shared
@model NuWebNCloud.Shared.Integration.Models.Sandbox.Inventory.Product.InteProductItemOnStore

@if (Model.ListSeasonPOS != null)
{
    for (int i = 0; i < Model.ListSeasonPOS.Count; i++)
    {
        <tr data-id="@Model.ListSeasonPOS[i].ID" class="NameSeasonPOS_@Model.StoreID" style="cursor:pointer;"
            data-value="@Model.ListSeasonPOS[i].Name" onclick="ToggleSeasonPOS(this, '@Model.StoreID'); return false;">
            <td width="20%">
                @Model.ListSeasonPOS[i].Name
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].Name", Model.OffSet, i), Model.ListSeasonPOS[i].Name)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].ID", Model.OffSet, i), Model.ListSeasonPOS[i].ID)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].RepeatType", Model.OffSet, i), Model.ListSeasonPOS[i].RepeatType)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].StartDate", Model.OffSet, i), Model.ListSeasonPOS[i].StartDate)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].EndDate", Model.OffSet, i), Model.ListSeasonPOS[i].EndDate)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].StartTime", Model.OffSet, i), Model.ListSeasonPOS[i].StartTime)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].EndTime", Model.OffSet, i), Model.ListSeasonPOS[i].EndTime)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].IsPOS", Model.OffSet, i), Model.ListSeasonPOS[i].IsPOS)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].StoreID", Model.OffSet, i), Model.ListSeasonPOS[i].StoreID)
                @Html.Hidden(string.Format("ListProductOnStore[{0}].ListSeasonPOS[{1}].Status", Model.OffSet, i), Model.ListSeasonPOS[i].Status, new { @class = "SeasonStatusPOS" })
            </td>
            <td width="40%">
                @if (Model.ListSeasonPOS[i].RepeatType == (byte)Commons.ERepeatType.DayOfWeek)
                {
                    Model.ListSeasonPOS[i].ListWeekDayV2 = Model.ListSeasonPOS[i].ListWeekDayV2.Where(x => x.IsActive == true).ToList();

                    if (Model.ListSeasonPOS[i].ListWeekDayV2.Count == 7)
                    {
                        @:Every day of week
                    }
                    else if (Model.ListSeasonPOS[i].ListWeekDayV2.Count == 0)
                    {
                        @:None
                    }
                    else
                    {
                        for (int d = 1; d <= Model.ListSeasonPOS[i].ListWeekDayV2.Count; d++)
                        {
                            int day = Model.ListSeasonPOS[i].ListWeekDayV2[d - 1].Index;
                            @:@Model.ListSeasonPOS[i].ListWeekDayV2[d - 1].Name
                            if (d % 4 == 0)
                            {
                                @Html.Raw("<br/>")
                            }
                            else
                            {
                                if (!(d == Model.ListSeasonPOS[i].ListWeekDayV2.Count))
                                {
                                    @:-
                                }
                            }
                        }
                    }
                }
                else if (Model.ListSeasonPOS[i].RepeatType == (byte)Commons.ERepeatType.DayOfMonth)
                {
                    Model.ListSeasonPOS[i].ListMonthDayV2 = Model.ListSeasonPOS[i].ListMonthDayV2.Where(x => x.IsActive == true).ToList();
                    if (Model.ListSeasonPOS[i].ListMonthDayV2.Count == 31)
                    {
                        @:Every day of month
                    }
                    else if (Model.ListSeasonPOS[i].ListMonthDayV2.Count == 0)
                    {
                        @:None
                    }
                    else
                    {
                        for (int d = 1; d <= Model.ListSeasonPOS[i].ListMonthDayV2.Count; d++)
                        {
                            int day = Model.ListSeasonPOS[i].ListMonthDayV2[d - 1].Index;
                            @:@day
                            if (d % 10 == 0)
                            {
                                @Html.Raw("<br/>")
                            }
                            else
                            {
                                if (!(d == Model.ListSeasonPOS[i].ListMonthDayV2.Count))
                                {
                                    @:-
                                }
                            }
                        }
                    }
                }
            </td>
            <td width="10%">
                @Model.ListSeasonPOS[i].StartDate.ToString("dd/MM/yyyy")
            </td>
            <td width="10%">
                @Model.ListSeasonPOS[i].EndDate.ToString("dd/MM/yyyy")
            </td>
            <td width="18%" style="text-align:center;">
                @if (Model.ListSeasonPOS[i].Unlimited)
                {
                    @:Unlimited - Unlimited
                }
                else
                {
                    @Model.ListSeasonPOS[i].StartTime.Value.ToString("HH:mm") @:- @Model.ListSeasonPOS[i].EndTime.Value.ToString("HH:mm")
                }
            </td>
            <td style="text-align: center;" width="2%">
                <i class="fa  @string.Format("{0}", Model.ListSeasonPOS[i].Status != 9 ?"fa-check":"")" id="chkActive"></i>
            </td>
        </tr>
    }
}