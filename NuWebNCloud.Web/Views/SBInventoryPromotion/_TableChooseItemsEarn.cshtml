@model NuWebNCloud.Shared.Models.Sandbox.Inventory.Promotion.EarningRuleDTO
@using NuWebNCloud.Shared.Utilities;
@if (Model.ListProduct != null && Model.ListProduct.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr style="background-color:#34495e; color:#fff;">
                <th style="width:1%;">@*<input type="checkbox" onchange="ToogleCheckAll(this, '#list-data')"/>*@</th>
                <th>@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Item Name"))</th>
            </tr>
        </thead>
        <tbody id="list-data">
            @for (int i = 0; i < Model.ListProduct.Count; i++)
            {
                <tr data-id="@Model.ListProduct[i].ProductID" style="cursor:pointer;"  class="SpecificItems">
                    <td>
                        @Html.CheckBoxFor(model => model.ListProduct[i].Checked)

                        @Html.HiddenFor(model => model.ListProduct[i].ProductCode, new { @id = "hidCode" })
                        @Html.HiddenFor(model => model.ListProduct[i].Name, new { @id = "hidName" })
                        @Html.HiddenFor(model => model.ListProduct[i].ItemType, new { @id = "hidItemType" })
                    </td>
                    <td onclick="TickCheckBox(this)"> @Model.ListProduct[i].Name</td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    function TickCheckBox(td) {
        var tr = $(td).parents('tr:first');
        $(tr).find('input[type=checkbox]').prop('checked', !$(tr).find('input[type=checkbox]').prop('checked'))
    }
</script>
