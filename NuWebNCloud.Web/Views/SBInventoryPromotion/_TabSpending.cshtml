@using NuWebNCloud.Shared
@using NuWebNCloud.Shared.Utilities;
@model NuWebNCloud.Shared.Models.Sandbox.Inventory.Promotion.SpendingRuleDTO

<tr data-id="@Model.ID" style='@string.Format("display:{0}", Model.Status==9?"none":"table-row")' class="spendingRow">
    <td style="font-weight:bold;line-height: 40px;min-width:44px">@Model.Condition</td>
    <td>
        @Html.Hidden(string.Format("ListSpendingRule[{0}].OffSet", Model.OffSet), Model.OffSet)
        @Html.Hidden(string.Format("ListSpendingRule[{0}].Status", Model.OffSet), Model.Status, new { @class = "GroupStatus" })
        @Html.Hidden(string.Format("ListSpendingRule[{0}].ID", Model.OffSet), Model.ID)
        @Html.Hidden(string.Format("ListSpendingRule[{0}].Condition", Model.OffSet), Model.Condition)

        @Html.DropDownList(string.Format("ListSpendingRule[{0}].SpendType", Model.OffSet),
               new SelectList(Model.ListSpendType, "Value", "Text", Model.SpendType),
               null,
               new
               {
                   @class = "form-control select2_multiple ddlSpendType",
                   @style = "width:100%;"
               })
        @Html.ValidationMessage(string.Format("ListSpendingRule[{0}].SpendType", Model.OffSet))
    </td>
    <td>
        @Html.TextBox(string.Format("ListSpendingRule[{0}].Amount", Model.OffSet), Model.Amount, new
   {
       @class = "form-control input-number",
       @type = "number",
       @min = 0
       //@maxlength = 2
   })
        @Html.ValidationMessage(string.Format("ListSpendingRule[{0}].Amount", Model.OffSet))
    </td>
    <td>
        @Html.DropDownList(string.Format("ListSpendingRule[{0}].SpendOnType", Model.OffSet),
               new SelectList(Model.ListSpendOnType, "Value", "Text", Model.SpendOnType),
               null,
               new
               {
                   onchange = "OnChangeSpendOnType(this)",
                   @class = "form-control select2_multiple ddlSpendOnType",
                   @style = "width:100%;",
                   @data_offSet = Model.OffSet
               })
        @Html.ValidationMessage(string.Format("ListSpendingRule[{0}].SpendOnType", Model.OffSet))
    </td>
    <td>
        @Html.TextBox(string.Format("ListSpendingRule[{0}].ItemDetail", Model.OffSet), Model.ItemDetail, new
   {
       @class = "form-control",
       @placeholder = Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Select")),
       @readonly= "readonly",
       @id = "txtSpending_" + Model.OffSet + "",
       @onfocus = "ShowModalAddItem(this,'" + Model.OffSet + "','storeSpending')"
   })
        @Html.ValidationMessage(string.Format("ListSpendingRule[{0}].ItemDetail", Model.OffSet))
    </td>
    <td width="50px">
        <a href="#" onclick="DeleteTabPanelSpending(this); return false;" style="font-size:28px; color:red; @string.Format("display:{0}", Model.OffSet == 0 ? "none" : "block")">
            <i class="fa fa-remove"></i>
        </a>

        <!-- Modal Add Item-->
        <div class="modal fade" id="modalItem" tabindex="-1" role="dialog" aria-labelledby="modalItemLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Specific Items")) </h4>
                    </div>
                    <div class="modal-body scroll" id="popupSpending">
                        <div class="form-group-sm">
                            <table class="table center-content">
                                <thead>
                                    <tr style="background-color:#34495e; color:#fff;">
                                        <th width="10%">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Item Code"))</th>
                                        <th width="50%">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Item Name"))</th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>
                                <tbody id="body-dishes">
                                    @if (Model.ListProduct != null && Model.ListProduct.Count > 0)
                                    {
                                        @Html.Partial("_ItemModal", Model)
                                    }
                                    <tr>
                                        <td colspan="4" style="padding-top:12px; text-align:left">
                                            <a href="javascript:void(0)" data-toggle="modal" data-target="#modal-choose-items" data-whatever="@Model.OffSet" class="a-fnb" style="font-size:14px; color:#34495e;">
                                                <i class="fa fa-plus"></i>
                                                <span>@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Add more"))</span>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span></span>
                        <button class="btn btn-default" onclick="PasteHtml($(this).parents('.modal-content:first').find('table > tbody'));" data-dismiss="modal">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Cancel"))</button>
                        <button id="btn-save-dish" type="button" class="btn btn-beauty bg-fnb" data-dismiss="modal" onclick="SetProductNameSpending('@Model.OffSet')">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Save Changes"))</button>
                    </div>
                </div>
            </div>
        </div>

    </td>
</tr>

<script type="text/javascript">
    $(document).ready(function () {
        $(".ddlSpendType").select2({
            placeholder: "@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Please choose spend type"))",
            //allowClear: true
        });
        $(".ddlSpendOnType").select2({
            placeholder: "@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Please choose item"))",
            //allowClear: true
        });

        @if (Model.SpendOnType == (byte)Commons.ESpendOnType.SpecificItem)
        {
            @:$("#txtSpending_" + @Model.OffSet).removeAttr("disabled");
        }
        else
        {
            @:$("#txtSpending_" + @Model.OffSet).attr("disabled", true);
        }

    });
</script>