@model NuWebNCloud.Shared.Models.Settings.SettingSchedulerTaskModels
@{
    ViewBag.Title = "Scheduler Report - Add New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                        new Dictionary<string, string> { { "A", "Settings" }, { "B", "Scheduled Reports" }, { "C", "Add New" } })
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                    <div class="x_title">
                        @Html.Partial("_TabMenu", "create")
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div class="row text-right">
                            <ul class="header-buttons pull-right list-inline">
                                <li><a href="#" class="btn btn-success" id="btn-actives" onclick="SubmitForm('.create-form')"><i class="fa fa-save"></i>&nbsp;Save</a></li>
                                <li><a href="@Url.Action("Index", "SettingSchedulerReport")" class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp;Cancel</a></li>
                            </ul>
                        </div>
                        <div class="box-body" style="display: block;">
                            @using (@Html.BeginForm("Create", "SettingSchedulerReport", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data" }))
                            {
                                @Html.Partial("_Form", Model)
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        function SubmitForm(form) {
            $(form).submit();
        }
    </script>

    <script src="@Url.Content("~/js/moment/moment.min.js")"></script>
    <script src="@Url.Content("~/js/datepicker/daterangepicker.js")"></script>
    <script src="@Url.Content("~/vendors/select2/dist/js/select2.full.min.js")"></script>
    <script>
        $(document).ready(function () {
            $("#storeDdl").select2({
                placeholder: "Please choose store",
                allowClear: true
            });
            $("#ReportNameDdl").select2({
                placeholder: "Please choose report name",
                allowClear: true
            });
            //$("#DayOfWeekDdl").select2({
            //    placeholder: "Please choose day of week",
            //    allowClear: true
            //});
        });
    </script>
}