@model NuWebNCloud.Shared.Models.Settings.SettingSchedulerTaskModels
<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                        new Dictionary<string, string> { { "A", "Settings" }, { "B", "Scheduled Reports" }, { "C", "View Detail" } })
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                    <div class="x_content">
                        <div class="row text-right">
                            <ul class="header-buttons pull-right list-inline">
                                <li><a href="#" onclick="CloseDetail(); return false;" class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp;Close</a></li>
                            </ul>
                        </div>
                        <div class="box-body" style="display: block;">
                            <div class="row form-horizontal form-label-left" style="margin-bottom:15px;">
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Store Name: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.StoreName
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Report name: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.ReportName
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Day of weeks: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.DayOfWeeks
                                    </div>
                                </div>*@
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Subject: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.EmailSubject
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Email: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Email
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Cc: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Cc
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Bcc: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Bcc
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Hour: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Hour
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Minute: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Minute
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Active: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Enabled
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Daily: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.IsDaily
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Monthly: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.IsMonth
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 col-sm-2 col-xs-12 text-right">Description: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Model.Description
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>