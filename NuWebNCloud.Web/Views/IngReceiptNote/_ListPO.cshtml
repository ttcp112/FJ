@model NuWebNCloud.Shared.Models.Ingredients.ReceiptNoteModels

@if (Model.ListPurchaseOrder != null && Model.ListPurchaseOrder.Count > 0)
{
    for (int i = 0; i < Model.ListPurchaseOrder.Count; i++)
    {
        <tr class="PurchaseOrder">
            <td class="text-center">
                <input type="checkbox" onclick="TickItemCheckBox()" class="chkPO" data-id="@Model.ListPurchaseOrder[i].Id" data-ponumber="@Model.ListPurchaseOrder[i].PONumber" />
                @Html.Hidden(string.Format("ListPurchaseOrder[{0}].Id", i), Model.ListPurchaseOrder[i].Id, new { @id = "hidPurchaseOrderId" })
            </td>
            <td class="text-center">@Model.ListPurchaseOrder[i].PONumber</td>
            <td class="text-center">@Model.ListPurchaseOrder[i].SupplierName</td>
            <td class="text-center">@Model.ListPurchaseOrder[i].DeliveryDate.ToString("dd/MM/yyyy")</td>
        </tr>
    }
}