@using NuWebNCloud.Shared.Utilities;
@model NuWebNCloud.Shared.Integration.Models.Sandbox.Inventory.InteCategoriesViewModels

@if (Model.ListItem != null)
{
    for (int i = 0; i < Model.ListItem.Count; i++)
    {
        string styleRow = "row-evenItem";
        if (i % 2 == 0)
        {
            styleRow = "row-oddItem";
        }
        <tr class="even pointer @styleRow">
            <td class="text-center">               
                @Html.CheckBox(string.Format("ListItem[{0}].IsSelected", i), new { @class = "chkChild", @onClick = "toggleChecked()" })
                <input type="hidden" name="@string.Format("ListItem[{0}].ID",i)" value="@Model.ListItem[i].ID" />
                <input type="hidden" name="@string.Format("ListItem[{0}].ImageURL",i)" value="@Model.ListItem[i].ImageURL" />
                <input type="hidden" name="@string.Format("ListItem[{0}].Name",i)" value="@Model.ListItem[i].Name" />
                <input type="hidden" name="@string.Format("ListItem[{0}].ParentName",i)" value="@Model.ListItem[i].ParentName" />
                <input type="hidden" name="@string.Format("ListItem[{0}].ProductTypeName",i)" value="@Model.ListItem[i].ProductTypeName" />
            </td>
            <td class="text-center"><img src="@Model.ListItem[i].ImageURL" height="30" width="30" class="img-circle" /></td>
            <td class="text-center">@Model.ListItem[i].Name</td>
            <td class="text-center">@Model.ListItem[i].ParentName</td>
            <td class="text-center">@Model.ListItem[i].ProductTypeName</td>
        </tr>
    }
}
