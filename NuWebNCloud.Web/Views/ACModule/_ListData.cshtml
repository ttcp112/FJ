@using NuWebNCloud.Shared
@using NuWebNCloud.Shared.Models.AccessControl
@model NuWebNCloud.Shared.Models.AccessControl.ModuleViewModels

@helper ShowNodules(List<ModuleModels> modules, int level = 1, string parent = "")
{
for (int i = 0; i < modules.Count; i++)
{
    var item = modules[i];
    string styleRow = "row-evenItem";
    if (i % 2 == 0)
    {
        styleRow = "row-oddItem";
    }
    string display = "";
    if (item.ListChild.Count != 0)
    {
        display = "display: none;";
    }
    <tr class="@styleRow moduleTr-@level">
        <td style="font-weight:bold;"><span class="module-@level">@item.Name</span></td>
        <td style="text-align:center;color:#34495e; font-weight:bold;">@parent</td>
        <td>@item.Controller</td>
        <td>
            <a href="#"
               onclick="ShowView('@Url.Action("View", "ACModule", new { id = item.Id })')"
               class="btn btn-primary btn-xs view details"><i class="fa fa-eye"></i>&nbsp;View</a>&nbsp;&nbsp;
            <a href="#"
               onclick="ShowView('@Url.Action("Edit", "ACModule", new { id = item.Id })')"
               class="btn btn-info btn-xs edit details"><i class="fa fa-edit"></i>&nbsp;Edit</a>&nbsp;&nbsp;
            <a href="#" style="@display"
               onclick="ShowView('@Url.Action("Delete", "ACModule", new { id = item.Id })')"
               class="btn btn-danger btn-xs delete details"><i class="fa fa-trash-o"></i>&nbsp;Delete</a>
        </td>
    </tr>

    if (item.ListChild != null && item.ListChild.Count != 0)
    {
            @ShowNodules(item.ListChild, level + 1, item.ParentName)
    }
}
}

