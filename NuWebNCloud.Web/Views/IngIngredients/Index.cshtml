@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#companyDdlView").select2({
                placeholder: "@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Please choose company."))",
                allowClear: true
            });
            Search();
            disableButton(false);
        });

        $(".search-form").submit(function (e) {
            Search();
            return false;
        });

        var lstIdSelected = [];

        function toggleCheckedAll() {
            var isCheckAll = $('#check-all').prop("checked");
            var listChk = $('.chkChild');
            lstIdSelected = [];
            for (var i = 0; i < listChk.length; i++) {
                var item = $(listChk[i]).attr('id');
                if (isCheckAll === true) {
                    $(listChk[i]).prop('checked', true);
                    lstIdSelected.push(item);
                    disableButton(true);
                } else {
                    $(listChk[i]).prop('checked', false);
                    disableButton(false);
                }
            }
        }

        function toggleChecked() {
            var _count = 0;
            var listChk = $('.chkChild');
            lstIdSelected = [];
            for (var i = 0; i < listChk.length; i++) {
                var item = $(listChk[i]).attr('id');
                if ($(listChk[i]).prop('checked') === true) {
                    lstIdSelected.push(item);
                    _count++;
                }
                if (listChk.length !== _count) {
                    $('#check-all').prop("checked", false);
                }
                else {
                    $('#check-all').prop("checked", true);
                }
                if (_count === 0) {
                    disableButton(false);
                } else {
                    disableButton(true);
                }
            }
        }

        function disableButton(status) {
            if (!status) {
                $('#btn-active').addClass('disabled');
                $('#btn-inactive').addClass('disabled');
            } else {
                $('#btn-active').removeClass('disabled');
                $('#btn-inactive').removeClass('disabled');
            }
        }
       
        function showAction(urlLink) {
            $(".se-pre-con").show();
            $.ajax({
                url: urlLink,
                type: 'GET',
                dataTupe: 'json',
                cache: false,
                //data: { id: id },
                success: function (data) {
                    $(".se-pre-con").hide();
                    $(".detail-view").html(data);
                    $(".detail-view").show();
                    $(".gridview").css("display", "none");
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    //debugger;
                    $(".se-pre-con").hide();
                    $(".detail-view").html(jqXHR.responseText);
                }
            });
        };

        function EnableActive(isActive) {
            if (typeof lstIdSelected == 'undefined' || lstIdSelected.length == 0) {

                alert("Please choose least one ingredient!");
                return;
            }
            $(".se-pre-con").show();
            $.ajax({
                url: '@Url.Action("EnableActive", "IngIngredients")',
                type: 'POST',
                dataTupe: 'json',
                cache: false,
                data: { lstId: lstIdSelected, active: isActive },
                success: function () {
                    $(".se-pre-con").hide();
                    //window.location.href = "/IngIngredients";
                    Search();
                    disableButton(false);
                },
                error: function () { }
            });
        };
    </script>
}