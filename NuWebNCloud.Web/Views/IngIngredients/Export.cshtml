@model NuWebNCloud.Shared.Models.Ingredients.IngredientModel
@using NuWebNCloud.Shared.Utilities;
@{
    ViewBag.Title = Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Export"));
}
<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding: 10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                new Dictionary<string, string> { { "A", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredients")).ToString()}, { "B", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Master Data")).ToString() }, { "C", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredients")).ToString() + " - "+ Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Export")).ToString() } })

                @*<h4>
                        Ingredients <small>
                            <i class="fa fa-angle-double-right"></i><a href="@Url.Action("Index","IngIngredients",new { area = "" })">
                                <span style="font-size:16px;">Master Data</span>
                            </a>&nbsp;<i class="fa fa-angle-double-right"></i>&nbsp;Ingredients - Export
                        </small>
                    </h4>*@
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                    <div class="x_title">
                        @Html.Partial("_TabMenu", "export")
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row text-right">
                            <ul class="header-buttons pull-right list-inline">
                                <li><a href="javascript:void(0)" class="btn btn-success" id="btn-actives" onclick="SubmitForm('.export-form')"><i class="fa fa-save"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Export")) </a></li>
                                <li><a href="@Url.Action("Index","IngIngredients",new { area = "" })" class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp; @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Cancel")) </a></li>
                            </ul>
                        </div>
                        <div class="box-body" style="display: block;">
                            @using (@Html.BeginForm("Export", "IngIngredients", FormMethod.Post, new { @class = "form-horizontal export-form", @enctype = "multipart/form-data" }))
                            {
                                @*Choose Company*@
                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight"> @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Choose Company"))</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.DropDownListFor(model => model.ListCompany,
                                            new SelectList(@ViewBag.ListCompany, "Value", "Text", Model.ListCompany), null,
                                            new
                                            {
                                                @class = "form-control select2_multiple",
                                                @id = "companyDdl",
                                                @style = "width:100%;",
                                                @multiple = "multiple"
                                            })
                                        @Html.ValidationMessageFor(model => model.ListCompany, null, new { @class = "label label-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.ValidationSummary(true, Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Error"))+" : ", new { style = "color:red" })
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-md-12">
                                    @if (ViewBag.IsSuccess == true)
                                    {
                                        <div id="divSuccess" role="alert" class="alert alert-success alert-dismissible fade in">
                                            <span class="fa fa-check-square-o" aria-hidden="true"></span> @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Export File Successfully")) 
                                        </div>
                                    }
                                    else
                                    {
                                        <div id="divError" role="alert" class="alert alert-dismissible fade in">
                                            <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Export File Error!!!")) 
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div><!--End x_content-->
                </div>
            </div><!--End row-->
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        //ready
        $("#divSuccess").hide();
        $("#divError").hide();

        $("#companyDdl").select2({
            placeholder:"@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Please choose company."))",
            allowClear: true
        });
    })

    function exportExcel(urlLink) {
        $.ajax({
            url: urlLink,
            type: 'POST',
            dataTupe: 'json',
            cache: false,
            success: function (data) {
                window.location.href = '/IngIngredients/Export?file=' + data.Message;
                $("#divSuccess").show();
            },
            error: function (data) {
                $("#divError").show();
            }
        });
    }
</script>
