@model NuWebNCloud.Shared.Models.Ingredients.IngredientViewModel
@using NuWebNCloud.Shared.Utilities;
@{
    int i = 0;
}
<div class="table-responsive">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredients"))
                
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered dt-responsive nowrap table table-striped jambo_table bulk_action" id="datatable-responsive" cellspacing="0" style="width:100%;">
                    <thead>
                        <tr class="headings">

                            <th style="text-align:center;"> <input type="checkbox" id="check-all" onclick="toggleCheckedAll()" /></th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredient Code")).ToString() </th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredient Name")).ToString() </th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Company")).ToString()  </th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Base UOM")).ToString() </th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Reordering Quantity")).ToString()</th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Min Alert")).ToString()</th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Status")).ToString() </th>
                            <th class="column-title text-center">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Action")).ToString()</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListItem)
                        {
                            string styleRow = "row-evenItem";
                            if (i % 2 == 0)
                            {
                                styleRow = "row-oddItem";
                            }

                            <tr class="even pointer @styleRow">
                                <td class="a-center text-center">
                                    <input type="checkbox" id="@item.Id" name="table_records" class="chkChild" onclick="toggleChecked();" />
                                </td>
                                <td text-center>@item.Code</td>
                                <td>@item.Name</td>
                                <td class="text-center">@item.CompanyName</td>
                                <td class="text-center">@item.BaseUOMName</td>
                                <td class="text-center number">@string.Format("{0:N0}", item.ReOrderQty)</td>
                                <td class="text-center">@string.Format("{0:N0}", item.MinAlertQty)</td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="label label-success">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Active")) </span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("InActive"))</span>
                                    }
                                </td>
                                <td style="text-align:center;">
                                    <a href="javascript:void(0)" class="btn btn-primary btn-xs view details" id="btn_View" onclick="showAction('@Url.Action("View", "IngIngredients", new { id = @item.Id})');"><i class="fa fa-eye"></i>@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("View"))</a>

                                    <a href="javascript:void(0)"
                                       onclick="showAction('@Url.Action("Edit", "IngIngredients", new { id = @item.Id})');"
                                       class="btn btn-info btn-xs edit details"><i class="fa fa-edit"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Edit")) </a>&nbsp;

                                    <a href="javascript:void(0)" onclick="showAction('@Url.Action("Delete", "IngIngredients", new { id = @item.Id })')"
                                       class="btn btn-danger btn-xs delete details"><i class="fa fa-trash-o"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Delete"))</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    //=========================================
    $(document).ready(function () {
        var handleDataTableButtons = function () {
            if ($("#datatable-buttons").length) {
                $("#datatable-buttons").DataTable({
                    dom: "Bfrtip",
                    responsive: true
                });
            }
        };

        TableManageButtons = function () {
            "use strict";
            return {
                init: function () {
                    handleDataTableButtons();
                }
            };
        }();

        $('#datatable').dataTable();
        $('#datatable-keytable').DataTable({
            keys: true
        });

        var table = $('#datatable-responsive').DataTable({
            "columnDefs": [
                { "type": "string-string-num", targets: 1 },
                { "orderable": false, "targets": [0, 8] },
                { "width": "2%", "targets": 0 },
                { "width": "5%", "targets": [1, 4, 5, 6, 7] },
                { "width": "10%", "targets": 8 },
                { "width": "15%", "targets": 3 }
            ],
            "order": [
                [3, 'asc'],
                [2, 'asc']
            ],
            "displayLength": 25,
            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                //Column Group
                api.column(3, { page: 'current' }).data().each(function (group, i) {
                    if (last !== group) {
                        $(rows).eq(i).before(
                            '<tr class="group"><td colspan="9"><strong style="color:#d9534f;">' + (group === '' ? '|' : group) + '</strong></td></tr>'
                        );
                        last = group;
                    }
                });
            }
        });

        var table = $('#datatable-fixed-header').DataTable({
            fixedHeader: true
        });

        TableManageButtons.init();
    });
</script>