@model NuWebNCloud.Shared.Models.Ingredients.IngredientModel
@using NuWebNCloud.Shared.Utilities;
@{
    ViewBag.Title = Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Import"));
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="right_col">
    <div class="">
        <div class="page-title">
            <div class="title_left" style="padding:10px 0px;">
                @Html.Partial("~/Views/Shared/_breadcrumb.cshtml",
                        new Dictionary<string, string> { { "A", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredients")).ToString() }, { "B", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Master Data")).ToString() }, { "C", Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Ingredients"))+ " - " + Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Import")) } })
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 x_panel">
                    <div class="x_title">
                        @Html.Partial("_TabMenu", "import")
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div class="row text-right">
                            <ul class="header-buttons pull-right list-inline">
                                <li><a href="javascript:void(0)" class="btn btn-success" id="btn-actives" onclick="SubmitForm('.create-form')"><i class="fa fa-save"></i>&nbsp;@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Import")) </a></li>
                                <li><a href="@Url.Action("Index","IngIngredients",new { area = "" })" class="btn btn-danger" id="btn-delete"><i class="fa fa-times"></i>&nbsp; @Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Cancel")) </a></li>
                            </ul>
                        </div>
                        <div class="box-body" style="display: block;">
                            @using (@Html.BeginForm("Import", "IngIngredients", FormMethod.Post, new { @class = "form-horizontal create-form", @enctype = "multipart/form-data" }))
                            {
                                @*Choose Company*@
                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Choose Company")) </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.DropDownListFor(model => model.ListCompany,
                                            new SelectList(@ViewBag.ListCompany, "Value", "Text", Model.ListCompany), null,
                                            new
                                            {
                                                @class = "form-control select2_multiple",
                                                @id = "companyDdl",
                                                @style = "width:100%;",
                                                @multiple = "multiple"
                                            })
                                        @Html.ValidationMessageFor(model => model.ListCompany, null, new { @class = "label label-danger" })
                                    </div>
                                </div>

                                <!-- FILE EXCEL -->
                                <div class="form-group">
                                    <label for="fileExel" class="col-md-2 control-label">@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Choose file excel")): </label>
                                    <div class="checkbox col-md-5">
                                        <label>
                                            @Html.TextBoxFor(model => model.ExcelUpload, new { @type = "file", @accept = "*.xlsx, *.xls" })
                                            @Html.ValidationMessageFor(model => model.ExcelUpload, null, new { @class = "label label-danger" })
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div><!--end x_content-->
                </div><!--end x_panel-->
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        //ready
        //$("#divSuccess").hide();
        //$("#divError").hide();

        $("#companyDdl").select2({
            placeholder: "@Html.Raw(_AttributeForLanguage.CurrentUser.GetLanguageTextFromKey("Please choose company."))",
            allowClear: true
        });
    })
</script>