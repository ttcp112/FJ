<div class="form-group">
    <label class="col-md-2 control-label">Day of weeks</label>
    <div class="col-md-6">
        @Html.DropDownListFor(model => model.DayOfWeeks,
                                    new SelectList(Model.ListDayOfWeeks, "Value", "Text", Model.ListDayOfWeeks), null,
                                    new
                                    {
                                        @class = "form-control select2_multiple",
                                        @id = "storeDdl",
                                        @multiple = "multiple"
                                    })
        @Html.ValidationMessageFor(model => model.DayOfWeeks, null, new { @class = "validateLevel label label-danger" })
    </div>
</div>

<div class="form-group">
    <label class="col-md-2 control-label">Email Subject: </label>
    <div class="col-md-6">
        <div class="input-group">
            <span id="basic-addon1" class="input-group-addon">@@</span>
            @Html.TextBox("EmailSubject", Model.EmailSubject, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.EmailSubject, null, new { @class = "label" })
    </div>
</div>

<div class="form-group">
    <label class="col-md-2 control-label">Email: </label>
    <div class="col-md-6">
        <div class="input-group">
            <span id="basic-addon1" class="input-group-addon">@@</span>
            @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "label" })
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Cc: </label>
    <div class="col-md-6">
        <div class="input-group">
            <div class="input-group-btn">
                <button aria-label="Help" class="btn btn-default" type="button" data-toggle="tooltip" data-placement="right"
                        title="Send multiple email by char [;]">
                    <span class="glyphicon glyphicon-question-sign"></span>
                </button>
            </div>
            @Html.TextBox("Cc", Model.Cc, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Bcc: </label>
    <div class="col-md-6">
        <div class="input-group">
            <div class="input-group-btn">
                <button aria-label="Help" class="btn btn-default" type="button" data-toggle="tooltip" data-placement="right"
                        title="Send multiple email by char [;]">
                    <span class="glyphicon glyphicon-question-sign"></span>
                </button>
            </div>
            @Html.TextBox("Bcc", Model.Bcc, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Hour: </label>
    <div class="col-md-6">
        @Html.TextBox("Hour", Model.Hour, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Hour, null, new { @class = "label" })
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Minute: </label>
    <div class="col-md-6">
        @Html.TextBox("Minute", Model.Minute, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Minute, null, new { @class = "label" })
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Active: </label>
    <div class="col-md-6">
        @Html.CheckBoxFor(model => model.Enabled)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Daily: </label>
    <div class="col-md-6">
        @Html.CheckBoxFor(model => model.IsDaily)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">Monthly: </label>
    <div class="col-md-6">
        @Html.CheckBoxFor(model => model.IsMonth)
    </div>
</div>


@Scripts.Render("~/vendors/jquery/dist/jquery.min.js")
<script type="text/javascript">
    $(document).ready(function () {
        $(".validation-summary-errors li:contains('SUCCESS')").css("color", "#00AFF0");
    });
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
