@model NuWebNCloud.Shared.Models.Settings.SettingSchedulerTaskModels
@{
    Html.EnableUnobtrusiveJavaScript(true);
    var _ID = Model.Id;
}
@if (!_ID.Equals("0"))
{
    @Html.Hidden("ReportId", Model.ReportId)
}
else
{
    @Html.Hidden("ID", Model.Id)
}

<div class="form-group">
    <label class="col-md-2 control-label"></label>
    <div class="col-md-6" style="padding: 0px;">
        @Html.ValidationSummary(true, "", new { @style = "color:red;" })
    </div>
</div>

@if (!_ID.Equals("0")) // Edit
{
    <div class="form-group">
        <label class="control-label col-md-2">Report name: </label>
        <div class="col-md-6">
            <div>
                @Html.DropDownListFor(model => model.ReportId,
           new SelectList(Model.ListNameReport, "Value", "Text", Model.ReportId), "-- [Select Name Report] --",
           !_ID.Equals("0") ? (object)new
           {
               @class = "form-control",
               @disabled = "disabled"
           } : new
           {
               @class = "form-control"
           })
            </div>
            @Html.ValidationMessageFor(model => model.ReportId, null, new { @class = "label" })

        </div>
    </div>
}
else // Add New
{
    <div class="form-group">
        <label class="control-label col-md-2">Report name: </label>
        <div class="col-md-6">
            @Html.ListBoxFor(model => model.ReportId, new MultiSelectList(Model.ListNameReport, "Value", "Text", Model.ListNameReport), new { @class = "multiple" })
            <br />
            @Html.ValidationMessageFor(model => model.ReportId, null, new { @class = "label" })
        </div>
    </div>
}
